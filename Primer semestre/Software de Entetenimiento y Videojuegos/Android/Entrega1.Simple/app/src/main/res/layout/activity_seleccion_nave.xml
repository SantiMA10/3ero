<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.simple.SeleccionNaveActivity"
    android:background="@drawable/menu_seleccionar_nave"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:id="@+id/imageNave"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/descripcionNave"
        android:layout_gravity="center_horizontal"
        android:autoText="false"
        android:nestedScrollingEnabled="true"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonFlechaIzquierda"
            android:foregroundGravity="center_vertical"
            android:background="@drawable/flecha_izquierda" />

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/botonSeleccionar"
            android:foregroundGravity="center_vertical"
            android:background="@drawable/boton_jugar" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonFlechaDerecha"
            android:foregroundGravity="center_vertical"
            android:background="@drawable/flecha_derecha" />
    </LinearLayout>

</LinearLayout>
